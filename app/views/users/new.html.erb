<h1>New User</h1>

<%= form_with(url: "/register", method: :post, local: true) do |f| %>
  <%= f.label :name, "Name:" %>
  <%= f.text_field :name %>

  <%= f.label :email, "Email:" %>
  <%= f.text_field :email %>

  <%= f.submit "Register" %>

    <% if flash[:error] %>
    <p><%= flash[:error] %></p>
    <% end %>
    
<% end %>
